  "description": "Self-evolving Claude Code workflow with persistent memory, agent orchestration, and adaptive learning",
  "main": "src/index.js",
  "bin": {
    "ucw": "./bin/cli.js",
    "nexus-claude": "./bin/cli.js"
  },
  "scripts": {
