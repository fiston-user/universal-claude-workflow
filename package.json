  },
  "dependencies": {
    "commander": "^11.1.0",
    "inquirer": "^8.2.5",
    "chalk": "^4.1.2",
    "ora": "^5.4.1",
    "fs-extra": "^11.1.1",
    "glob": "^10.3.10",
    "semver": "^7.5.4",
    "yaml": "^2.3.4",
    "sqlite3": "^5.1.7",
    "natural": "^6.12.0",
    "axios": "^1.6.0",
    "uuid": "^9.0.1",
    "date-fns": "^2.30.0",
    "lodash": "^4.17.21",
